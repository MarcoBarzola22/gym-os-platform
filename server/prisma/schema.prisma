generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- MODELOS DEL GIMNASIO ---

model User {
  id              Int       @id @default(autoincrement())
  fullName        String
  dni             String    @unique
  
  // 游녢 AGREGA ESTA L칈NEA 游녢
  password        String    @default("123456") 
  

  email           String?   // Opcional
  photoUrl        String?
  qrSecret        String?   // Clave secreta para el QR din치mico
  
  // Estado de la cuenta
  isActive        Boolean   @default(true)
  expirationDate  DateTime? // 쮿asta cu치ndo pag칩?
  lastPaymentDate DateTime?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  payments        Payment[]
  accessLogs      AccessLog[]
}

model Payment {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  amount    Decimal  @db.Decimal(10, 2)
  method    String   // "CASH", "TRANSFER", "MP"
  date      DateTime @default(now())
}

model AccessLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  timestamp DateTime @default(now())
  status    String   // "GRANTED", "DENIED"
  method    String   // "QR", "MANUAL"
}

// Tabla para comunicar el Celular con la PC
model ScanEvent {
  id        Int      @id @default(autoincrement())
  qrContent String   // Lo que ley칩 el celular
  scannedAt DateTime @default(now())
  processed Boolean  @default(false)
  scannerId String?
}